@using MudBlazor.Utilities

<MudPaper Class="p-4 m-2" Elevation="4">
    <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center mud-theme-primary rounded-2 m-3 p-1">
        <MudField InputType="text" Label="Color Input" For="@ColorValue"></MudField>
        <MudText Typo="Typo.h5" Align="Align.Center">Generate a Color Pallet</MudText>
        <MudContainer Class="d-flex flex-wrap justify-center mt-2">
            <MudColorPicker Rounded="true" Class="rounded mx-2 my-1" PickerVariant="PickerVariant.Static" @bind-Text="ColorValue" ShowToolbar="false" ShowAlpha="false" ShowColorField="true" ShowPreview="false" ShowSliders="false" ShowInputs="false" ShowModeSwitch="false" />
            <MudColorPicker Rounded="true" Class="rounded mx-2 my-1" ColorPickerView="ColorPickerView.Palette" PickerVariant="PickerVariant.Static" @bind-Text="ColorValue" ShowToolbar="false" ShowAlpha="false" ShowColorField="false" ShowPreview="false" ShowSliders="false" ShowInputs="true" ShowModeSwitch="true" />
        </MudContainer>
        <MudColorPicker Rounded="true" Class="rounded mx-2 my-1" PickerVariant="PickerVariant.Static" @bind-Text="ColorValue" ImmediateText="true" ShowToolbar="false" ShowAlpha="false" ShowColorField="false" ShowPreview="false" ShowSliders="false" ShowInputs="true" ShowModeSwitch="true" />
    </MudContainer>
</MudPaper>

